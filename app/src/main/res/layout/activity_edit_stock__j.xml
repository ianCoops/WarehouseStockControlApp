<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ianle.warehousestockcontrolapp.EditStock_J">

    <ScrollView
        android:layout_width="560dp"
        android:layout_height="255dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/editStockTableJ"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="0,1,2,3,4,5">

                <TableRow
                    android:id="@+id/table_layout_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/editHeader"
                        android:layout_width="wrap_content"
                        android:layout_column="2"
                        android:text="    Edit"
                        android:textAlignment="center"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/editHeader2"
                        android:layout_width="wrap_content"
                        android:layout_column="3"
                        android:text="Stock"
                        android:textAlignment="center"
                        android:textSize="24dp" />

                    <Button
                        android:id="@+id/helpButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:text="Help" />

                </TableRow>


                <TableRow
                    android:id="@+id/table_layout_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/aisleHeader"
                        android:layout_width="94dp"
                        android:layout_column="0"
                        android:text="Aisle"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/levelHeader"
                        android:layout_width="94dp"
                        android:layout_column="1"
                        android:text="Level"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/locationHeader"
                        android:layout_width="94dp"
                        android:layout_column="2"
                        android:text="Location"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/customerHeader"
                        android:layout_width="94dp"
                        android:layout_column="3"
                        android:text="Customer"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/boxesHeader"
                        android:layout_width="94dp"
                        android:layout_column="4"
                        android:text="Boxes"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/confirmHeader"
                        android:layout_width="94dp"
                        android:layout_column="5"
                        android:text="Confirm"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
